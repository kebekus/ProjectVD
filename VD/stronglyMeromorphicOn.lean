  ((meromorphicNFOn_toMeromorphicNFOn f U) z‚ÇÄ hz‚ÇÄ).meromorphicAt.order = (hf z‚ÇÄ hz‚ÇÄ).order := by
  apply MeromorphicAt.order_congr
  exact (toMeromorphicNFOn_eq_self_on_nhdNE hf hz‚ÇÄ).symm


theorem MeromorphicOn.divisor_of_toMeromorphicNFOn [CompleteSpace ùïú]
  {f : ùïú ‚Üí ùïú}
  {U : Set ùïú}
  (hf : MeromorphicOn f U) :
  divisor f U = divisor (toMeromorphicNFOn f U) U := by
  ext z
  by_cases hz : z ‚àà U
  ¬∑ simp [hf, (meromorphicNFOn_toMeromorphicNFOn f U).meromorphicOn, hz]
    congr 1
    apply MeromorphicAt.order_congr
    exact toMeromorphicNFOn_eq_self_on_nhdNE hf hz
  ¬∑ simp [hz]
